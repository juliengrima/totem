<div class="slider">
    <ul class="slides">
        {% for carousel in carousels %}
        <li>
            {% if carousel.media.link is defined %}
                {% if carousel.type != 1 %}
            <img src="{{ asset(carousel.media.link) }}" alt="{{ carousel.media.mediaName }}" class="img-carousel">
                {% else %}
                    <video class="responsive-video" playsinline muted autoplay loop>
                        <source src="{{ asset( carousel.media.link) }}" type="video/mp4">
                        <source src="{{ asset( carousel.media.link) }}" type="video/ogg">
                        <source src="{{ asset( carousel.media.link) }}" type="video/webm">
                        <p>Votre navigateur ne prend pas en charge les vid√©os HTML5.</p>
                    </video>
                {% endif %}
            {% endif %}
            <div class="caption center-align">
                <h3 class="grey-text carousel-shadow">{{ carousel.title }}</h3>
                <h5 class="grey-text">{{ carousel.text }}</h5>
            </div>
        </li>
        {% endfor %}
    </ul>
</div>